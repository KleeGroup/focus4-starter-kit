{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "dist",
        "jsx": "react",
        "lib": ["es2015", "dom"],
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "noFallthroughCasesInSwitch": true,
        "inlineSourceMap": true
    },
    "exclude": [
        "dist",
        "node_modules",
        "./src/**/__test__/*"
    ]
}